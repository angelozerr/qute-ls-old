{
  "name": "vscode-qute",
  "displayName": "Quarkus",
  "description": "Quarkus Tools for Visual Studio Code",
  "version": "1.3.0",
  "icon": "icons/logo.png",
  "author": "Red Hat",
  "publisher": "redhat",
  "license": "Apache-2.0",
  "bugs": "https://github.com/redhat-developer/vscode-qute/issues",
  "engines": {
    "vscode": "^1.37.0"
  },
  "galleryBanner": {
    "color": "#d8ebff",
    "theme": "light"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/redhat-developer/vscode-qute"
  },
  "keywords": [
    "qute"
  ],
  "activationEvents": [
    "onLanguage:qute-html",
    "onLanguage:qute-json",
    "onLanguage:qute-yaml",
    "onLanguage:qute-txt"
  ],
  "main": "./dist/extension",
  "contributes": {
    "languages": [
      {
        "id": "qute-html",
        "aliases": [
          "Qute HTML"
        ],
        "extensions": [
          "qute.html"
        ],
        "configuration": "./language-support/qute/language-configuration.json"
      },
      {
        "id": "qute-json",
        "aliases": [
          "Qute JSON"
        ],
        "extensions": [
          "qute.json"
        ],
        "configuration": "./language-support/qute/language-configuration.json"
      },
      {
        "id": "qute-yaml",
        "aliases": [
          "Qute YAML"
        ],
        "extensions": [
          "qute.yaml"
        ],
        "configuration": "./language-support/qute/language-configuration.json"
      },
      {
        "id": "qute-txt",
        "aliases": [
          "Qute Text"
        ],
        "extensions": [
          "qute.txt"
        ],
        "configuration": "./language-support/qute/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "qute-html",
        "scopeName": "text.html.qute",
        "path": "./language-support/qute/qute-html.tmLanguage.json"
      },
      {
        "language": "qute-json",
        "scopeName": "source.json.qute",
        "path": "./language-support/qute/qute-json.tmLanguage.json"
      },
      {
        "language": "qute-yaml",
        "scopeName": "source.yaml.qute",
        "path": "./language-support/qute/qute-yaml.tmLanguage.json"
      },
      {
        "language": "qute-txt",
        "scopeName": "text.qute",
        "path": "./language-support/qute/qute-txt.tmLanguage.json"
      },
      {
        "scopeName": "grammar.qute",
        "path": "./language-support/qute/qute.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Qute Tools",
      "properties": {
        "qute.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Qute language server.",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode none",
    "watch": "webpack --mode development --watch --info-verbosity verbose",
    "test-compile": "tsc -p ./",
    "pretest": "npm run test-compile",
    "test": "node ./out/test/runTest.js",
    "tslint": "./node_modules/.bin/tslint -p .",
    "build": "./node_modules/.bin/gulp build",
    "build-qute": "./node_modules/.bin/gulp buildQuteServer"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/fs-extra": "^7.0.0",
    "@types/md5": "^2.1.33",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.14.16",
    "@types/vscode": "^1.37.0",
    "@types/which": "^1.3.1",
    "@types/xml2js": "^0.4.4",
    "chai": "^4.2.0",
    "gulp": "^4.0.2",
    "gulp-rename": "^1.4.0",
    "mocha": "^6.2.1",
    "ts-loader": "^9.4.2",
    "tslint": "^5.12.1",
    "typescript": "^3.4.1",
    "typescript-tslint-plugin": "^0.3.1",
    "vscode-test": "^1.2.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@types/lodash": "^4.14.141",
    "@types/request": "^2.48.3",
    "@types/request-promise": "^4.1.44",
    "@types/unzipper": "^0.9.2",
    "@types/yauzl": "^2.9.1",
    "ejs": "^2.7.1",
    "expand-home-dir": "0.0.3",
    "find-java-home": "^1.0.0",
    "find-up": "^4.1.0",
    "fs-extra": "^8.0.1",
    "glob": "^7.1.4",
    "md5": "^2.2.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "user-home": "^2.0.0",
    "vscode-languageclient": "^5.2.1",
    "which": "^1.3.1",
    "xml2js": "^0.4.19",
    "yauzl": "^2.10.0"
  }
}
